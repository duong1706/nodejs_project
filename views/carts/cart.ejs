<div class="container mt-5">
    <table class="table">
        <tr>
            <th>Name</th>
            <th>Price</th>
            <th>Image</th>
            <th>Edit</th>
            <th>Delete</th>
        </tr>
        <% if (carts.items) {
            carts.items.map(x => { 
        %>
        <tr>
            <th><%= x.item.name %></th>
            <th><%= x.item.price %></th>
            <th><img src="<%= x.imageSrc %>" alt="<%= x.item.name %> " width="75px"> </th>
            <th class="d-flex">
                <a href="/cart/reduce/<%= x.id %>" class="mx-3 btn btn-light">-</a>
                <%= x.qty %> 
                <a href="/cart/increase/<%= x.id %>" class="mx-3 btn btn-light">+</a>
            </th>
            <th><%- include('../part/deleteForm', {url: `/cart/delete/${x.id}`}) %> </th>
        </tr>
        <% })} %>
    </table>
    <h1>Total: <%= carts.priceTotal %> </h1>
</div>